{
  "name": "smart-log",
  "displayName": "Smart Log",
  "description": "This is a logging plugin that intelligently inserts variables",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-log.insertConsoleLog",
        "title": "智能插入变量日志"
      },
      {
        "command": "smart-log.deleteConsoleLog",
        "title": "删除当前文件所有.log"
      }
    ],
    "keybindings": [
      {
        "command": "smart-log.insertConsoleLog",
        "key": "ctrl+shift+l",
        "mac": "cmd+alt+l",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "smart-log.deleteConsoleLog",
          "group": "smart",
          "when": "editorFocus"
        }
      ]
    },
    "configuration": {
            "title": "Add Console Params",
            "properties": {
               "smart-log.suffix": {
                    "type": "string",
                    "default": "【 一个骚骚的前缀 => ",
                    "description": "console前缀"
                },
                "smart-log.deletHighlight": {
                    "type": "string",
                    "enum": ["off", "on"],
                    "default": "off",
                    "description": "单文件内删除console.log前是否高亮显示"
                }
            }
        }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ts-morph": "^27.0.2"
  }
}